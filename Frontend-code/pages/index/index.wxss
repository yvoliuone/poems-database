.swiper-item{
   display: flex;
  flex-direction: column; 
  height: 100%;
  width: 100%;
  position: relative;
   align-items: center; 
  justify-content: center;    
  font-size: 38rpx;
    color: #6d480b;  
  /* color: ; */
  writing-mode: vertical-lr;
  letter-spacing: 0.15rem;
  background-size: 100% 100%;
}
.swiper-item::before{
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}

.content{
  margin: 3px;
}

image{
